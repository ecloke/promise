<div class="large-12 small-12 columns no_padding"> 
    <div class="large-12 small-12 columns home_bg text-center">
        <p id="notice" class="margin0"><%= notice %></p>
        <h1 class="text-white">Lets build a better Malaysia. Together.</h1>
        <p class="text-white">We build this for the community, by the community. We track all political parties promises, and their progress.</p>
        <div class="button alert text-white"><%= link_to 'Join the community', new_user_registration_path %></div>
    </div>

    <div class="large-12 small-12 columns promises">
        <div class="large-8 large-offset-2 small-12 columns">
            <% if @bn_promises.any? %>
                <div class='large-12 small-12 columns no_padding'>
                    <h2>List of Barisan National Promises</h2>
                    <% @bn_promises.each do |achievement| %>
                        <div class="large-12 small-12 columns no_padding promise_list">
                            <div class="large-6 small-12 columns">
                                <%= image_tag (achievement.photo) %>
                            </div>

                            <div class="large-6 small-12 columns">
                                <h3 style="margin-bottom: 5px;"><%= achievement.title %></h3>
                                <p class="author">Submitted <%= time_ago_in_words(achievement.created_at) %> by <%= achievement.user.username %></p>
                                <p><%= truncate(achievement.description, length: 200) %></p>
                                <p class="details"><b>Source:</b> <%= link_to achievement.source, achievement.source, target: "_blank", style: "color: lightblue;" %></p>
                                <p class="details"><b>Deadline:</b> <%= achievement.timeline.in_time_zone("Asia/Kuala_Lumpur").strftime("%m/%d/%Y") %></p>
                                <p class="details"><b>Budget:</b> <%= number_to_currency(achievement.amount, unit: 'RM ') %></p>
                                <p class="details"><b>Party:</b> <%= achievement.party %></p>
                                <p class="details"><b>State:</b> <%= achievement.location %></p>
                                <p class="details"><b>Status:</b> <%= achievement.status %></p>
                                <p class="details"><%= link_to 'View details', achievement %></p>
                                <% if achievement.user == current_user %>
                                    <div class="button success"><%= link_to 'Edit', edit_achievement_path(achievement) %></div>
                                    <div class="button alert"><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>

            <% if @ph_promises.any? %>
                <div class='large-12 small-12 columns no_padding top_padding'>
                    <h2>List of Pakatan Harapan Promises</h2>
                    <% @ph_promises.each do |achievement| %>
                        <div class="large-12 small-12 columns no_padding promise_list">
                            <div class="large-6 small-12 columns">
                                <%= image_tag (achievement.photo) %>
                            </div>

                            <div class="large-6 small-12 columns">
                                <h3 style="margin-bottom: 5px;"><%= achievement.title %></h3>
                                <p class="author">Submitted <%= time_ago_in_words(achievement.created_at) %> by <%= achievement.user.username %></p>
                                <p><%= truncate(achievement.description, length: 200) %></p>
                                <p class="details"><b>Source:</b> <%= link_to achievement.source, achievement.source, target: "_blank", style: "color: lightblue;" %></p>
                                <p class="details"><b>Deadline:</b> <%= achievement.timeline.in_time_zone("Asia/Kuala_Lumpur").strftime("%m/%d/%Y") %></p>
                                <p class="details"><b>Budget:</b> <%= number_to_currency(achievement.amount, unit: 'RM ') %></p>
                                <p class="details"><b>Party:</b> <%= achievement.party %></p>
                                <p class="details"><b>State:</b> <%= achievement.location %></p>
                                <p class="details"><b>Status:</b> <%= achievement.status %></p>
                                <p class="details"><%= link_to 'View details', achievement %></p>
                                <% if achievement.user == current_user %>
                                    <div class="button success"><%= link_to 'Edit', edit_achievement_path(achievement) %></div>
                                    <div class="button alert"><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>