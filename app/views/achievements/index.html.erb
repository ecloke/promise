<div class="large-12 small-12 columns"> 
    <p id="notice"><%= notice %></p>

    <h1>Achievements</h1>

    <table>
        <thead>
            <tr>
                <th>Photo</th>
                <th>Title</th>
                <th>Description</th>
                <th>Source</th>
                <th>Timeline</th>
                <th>Amount</th>
                <th>Party</th>
                <th>Location</th>
                <th>Status</th>
                <th colspan="3"></th>
            </tr>
        </thead>

    <tbody>
    <% @achievements.each do |achievement| %>
    <tr>
        <td><%= image_tag (achievement.photo) %></td>
        <td><%= achievement.title %></td>
        <td><%= achievement.description %></td>
        <td><%= achievement.source %></td>
        <td><%= achievement.timeline %></td>
        <td><%= achievement.amount %></td>
        <td><%= achievement.party %></td>
        <td><%= achievement.location %></td>
        <td><%= achievement.status %></td>
        <td><%= link_to 'Show', achievement %></td>
        <% if achievement.user == current_user %>
            <td><%= link_to 'Edit', edit_achievement_path(achievement) %></td>
            <td><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
    </tr>
    <% end %>
    </tbody>
    </table>
</div>