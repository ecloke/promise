<div class="large-12 small-12 columns no_padding"> 
    <div class="large-12 small-12 columns home_bg text-center">
        <p id="notice" class="margin0"><%= notice %></p>
        <h1 class="text-white">Lets build a better Malaysia. Together.</h1>
        <p class="text-white">We build this for the community, by the community. We track all political parties promises, and their progress.</p>
        <div class="button alert text-white"><%= link_to 'Join the community', new_user_registration_path %></div>
    </div>

    <div class="large-12 small-12 columns promises">
        <div class="large-8 large-offset-2 small-12 columns">
            <% if @bn_promises.any? %>
                <div class='large-12 small-12 columns no_padding'>
                    <h2>List of Barisan National Promises <div class="button success" style='float:right;'><%= link_to "view all BN promises", bn_promises_path %></div></h2>
                    <% @bn_promises.limit(3).each do |achievement| %>
                        <div class="large-12 small-12 columns no_padding promise_list">
                            <div class="large-6 small-12 columns">
                                <%= image_tag (achievement.photo) %>
                            </div>

                            <div class="large-6 small-12 columns">
                                <h3 style="margin-bottom: 5px;"><%= achievement.title %></h3>
                                <p class="author">Submitted <%= time_ago_in_words(achievement.created_at) %> ago by <%= achievement.user.username %> | | <%= achievement.comments.count %> comments</p>
                                <p><%= truncate(achievement.description, length: 200) %></p>
                                <p class="details"><b>Source:</b> <%= link_to achievement.source, achievement.source, target: "_blank", style: "color: lightblue;" %></p>
                                <p class="details"><%= link_to 'View more details', achievement %></p>
                                <% if current_user %>
                                    <%= link_to like_achievement_path(achievement), method: :put do %>
                                        <span><div class="button success">Upvote <%= achievement.get_upvotes.size  %></div></span>
                                    <% end %>

                                    <%= link_to dislike_achievement_path(achievement), method: :put do %>
                                        <span><div class="button alert">Downvote <%= achievement.get_downvotes.size  %></div></span>
                                    <% end %>

                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>

            <% if @ph_promises.any? %>
                <div class='large-12 small-12 columns no_padding top_padding'>
                    <h2>List of Pakatan Harapan Promises <div class="button success" style='float:right;'><%= link_to "view all PH promises", ph_promises_path %></div></h2>
                    <% @ph_promises.limit(3).each do |achievement| %>
                        <div class="large-12 small-12 columns no_padding promise_list">
                            <div class="large-6 small-12 columns">
                                <%= image_tag (achievement.photo) %>
                            </div>

                            <div class="large-6 small-12 columns">
                                <h3 style="margin-bottom: 5px;"><%= achievement.title %></h3>
                                <p class="author">Submitted <%= time_ago_in_words(achievement.created_at) %> ago by <%= achievement.user.username %> | | <%= achievement.comments.count %> comments</p>
                                <p><%= truncate(achievement.description, length: 200) %></p>
                                <p class="details"><b>Source:</b> <%= link_to achievement.source, achievement.source, target: "_blank", style: "color: lightblue;" %></p>
                                <p class="details"><%= link_to 'View more details', achievement %></p>
                                <% if current_user %>
                                    <%= link_to like_achievement_path(achievement), method: :put do %>
                                        <span><div class="button success">Upvote <%= achievement.get_upvotes.size  %></div></span>
                                    <% end %>

                                    <%= link_to dislike_achievement_path(achievement), method: :put do %>
                                        <span><div class="button alert">Downvote <%= achievement.get_downvotes.size  %></div></span>
                                    <% end %>

                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>