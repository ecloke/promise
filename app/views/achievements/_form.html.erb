
<%= form_with(model: achievement, local: true) do |form| %>
    <% if achievement.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(achievement.errors.count, "error") %> prohibited this achievement from being saved:</h2>

            <ul>
                <% achievement.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :source %>
        <%= form.text_field :source, id: :achievement_source %>
    </div>

    <div class="field">
        <%= form.label :year_article_published %>
        <%= form.select :year, (Time.zone.now.year - 10)..(Time.zone.now.year + 1) %>
    </div>

    <div class="field">
        <%= form.label :budget %>
        <%= form.number_field :amount, id: :achievement_amount, value: 0 %>
    </div>

    <div class="field">
        <%= form.label :coalition %>
        <%= form.select :party, ['Barisan National', 'Pakatan Harapan', 'Opinion'], id: :achievement_party %>
    </div>

    <div class="field">
        <%= form.label :location %>
        <%= form.select :location, ['Kuala Lumpur', 'Selangor', 'Penang', 'Perak', 'Johor', 'Sabah/Sarawak', 'Others'], id: :achievement_location %>
    </div>

    <div class="field">
        <%= form.label :status %>
        <%= form.select :status, ['Pending', 'Completed'], id: :achievement_status %>
    </div>

    <div class="actions">
        <%= form.submit "Create"%>
    </div>
<% end %>

